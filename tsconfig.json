{
	"compilerOptions": {
		"lib": [ "es2020", "dom" ],
		"module": "commonjs",
		"target": "es5",
		"types": [ "node", "react" ],
		"jsx": "react",
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": false,
		"declaration": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"lib"
	]
}
